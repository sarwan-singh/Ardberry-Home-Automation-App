<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    tools:context=".Houses">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00070707"
        tools:layout_editor_absoluteX="-206dp"
        tools:layout_editor_absoluteY="16dp">

        <RelativeLayout
            android:id="@+id/d1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/layoutroundup">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/d22"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/registeredicon" />

            <ImageView
                android:id="@+id/d2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/abwhite" />

            <TextView
                android:id="@+id/d3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/lato"
                android:text="Ardberry Technology Pvt. Ltd."
                android:textColor="#ffffff"
                android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/u1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/layoutroundbottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/u2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Main"
                android:fontFamily="@font/lato"
                android:layout_marginBottom="15dp"
                android:textColor="#F5F5F5"
                android:textSize="28sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:id="@+id/l1"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/house1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:onClick="house1"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="24dp"
                    tools:ignore="OnClick">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/layoutroundall"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            app:srcCompat="@drawable/home" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal|center_vertical"
                            android:layout_marginTop="5dp"
                            android:text="House 1"
                            android:fontFamily="@font/lato_light"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="20dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/layoutdot" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/house2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:onClick="house2"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="24dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/layoutroundall"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            app:srcCompat="@drawable/home" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal|center_vertical"
                            android:layout_marginTop="5dp"
                            android:text="House 2"
                            android:fontFamily="@font/lato_light"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="20dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/layoutdot" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l2"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/house3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:onClick="house3"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="24dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/layoutroundall"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            app:srcCompat="@drawable/home" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal|center_vertical"
                            android:layout_marginTop="5dp"
                            android:text="House 3"
                            android:fontFamily="@font/lato_light"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="20dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/layoutdot" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/house4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:onClick="house4"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="24dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/layoutroundall"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            app:srcCompat="@drawable/home" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal|center_vertical"
                            android:layout_marginTop="5dp"
                            android:text="House 4"
                            android:fontFamily="@font/lato_light"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="20dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/layoutdot" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/u1"
    android:id="@+id/homemain"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20dp"
    android:orientation="vertical">
        <ImageView
            android:id="@+id/home"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:srcCompat="@drawable/homeicon"
            android:onClick="home"
            android:layout_marginBottom="10dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:onClick="home"
        android:layout_gravity="center"
        android:fontFamily="@font/lato_light"
        />
</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/u1"
            android:id="@+id/logout"
            android:layout_alignRight="@id/u1"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/logouticon"
                android:onClick="logout"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_light"
                android:onClick="logout"
                android:text="Log Out"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>