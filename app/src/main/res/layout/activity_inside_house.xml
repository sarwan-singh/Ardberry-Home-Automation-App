<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsideHouse">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ED070707">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-10dp"
            android:layout_marginRight="-10dp"
            android:id="@+id/u1"
            android:orientation="vertical"
            android:background="@drawable/trapeziumup">

            <TextView
                android:id="@+id/u2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Your House"
                android:fontFamily="@font/lato"
                android:textColor="#F5F5F5"
                android:layout_marginBottom="20dp"
                android:textSize="28sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/ll1"
                android:background="@drawable/trapeziumleft">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="24dp"
                    android:id="@+id/card1"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="card1"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/layoutroundall">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/fan"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fans"
                            android:layout_marginTop="10dp"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:fontFamily="@font/lato_light"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/card1view"
                            android:background="@drawable/layoutdot2" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="24dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/card2"
                    android:onClick="card2"
                    app:cardElevation="2dp"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/layoutroundall">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/fridge"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fridge"
                            android:layout_marginTop="8dp"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:fontFamily="@font/lato_light"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/card2view"
                            android:background="@drawable/layoutdot2" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="24dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    android:id="@+id/card3"
                    android:onClick="card3"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/layoutroundall">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/widescreentv"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PC"
                            android:fontFamily="@font/lato_light"
                            android:layout_marginTop="10dp"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/card3view"
                            android:background="@drawable/layoutdot2" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="24dp"
                    android:layout_marginBottom="20dp"
                    app:cardElevation="2dp"
                    android:id="@+id/card4"
                    android:onClick="card4"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/layoutroundall">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/bulb"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bedroom"
                            android:fontFamily="@font/lato_light"
                            android:layout_marginTop="10dp"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/card4view"
                            android:background="@drawable/layoutdot3" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="24dp"
                    android:layout_marginBottom="20dp"
                    app:cardElevation="2dp"
                    android:id="@+id/card5"
                    android:onClick="card5"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/layoutroundall">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/bulb"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Living room"
                            android:layout_marginTop="10dp"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/lato_light"
                            android:textSize="16sp"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/card5view"
                            android:background="@drawable/layoutdot3" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="24dp"
                    android:layout_marginBottom="20dp"
                    app:cardElevation="2dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/card6"
                    android:onClick="card6"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/layoutroundall">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/bulb"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kitchen"
                            android:layout_marginTop="10dp"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/lato_light"
                            android:textSize="16sp"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/card6view"
                            android:background="@drawable/layoutdot3" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/ll2"
            android:background="@drawable/trapeziumright">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="24dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="2dp"
                android:id="@+id/card7"
                android:onClick="card7"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/layoutroundall">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/tv"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T.V"
                        android:layout_marginTop="10dp"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:fontFamily="@font/lato_light"
                        android:layout_gravity="center"/>
                    <View
                        android:layout_width="10dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/card7view"
                        android:background="@drawable/layoutdot2" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/card8"
                android:onClick="card8"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/layoutroundall">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/washingmachine"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clothes"
                        android:layout_marginTop="10dp"
                        android:textColor="#ffffff"
                        android:textAlignment="center"
                        android:fontFamily="@font/lato_light"
                        android:textSize="20sp"
                        android:layout_gravity="center"/>
                    <View
                        android:layout_width="10dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/card8view"
                        android:background="@drawable/layoutdot2" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="24dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                app:cardElevation="2dp"
                android:id="@+id/card9"
                android:onClick="card9"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/layoutroundall">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/hottub"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Geyser"
                        android:layout_marginTop="10dp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/lato_light"
                        android:textSize="20sp"
                        android:layout_gravity="center"/>
                    <View
                        android:layout_width="10dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/card9view"
                        android:background="@drawable/layoutdot2" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/d1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/layoutroundup">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/d22"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/registeredicon" />

                <ImageView
                    android:id="@+id/d2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/abwhite" />

                <TextView
                    android:id="@+id/d3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/lato"
                    android:text="Ardberry Technology Pvt. Ltd."
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/back"
            android:layout_below="@id/u1"
            android:layout_marginTop="12dp"
            android:onClick="back"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:onClick="back"
            android:fontFamily="@font/lato_light"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_below="@id/imageView"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>