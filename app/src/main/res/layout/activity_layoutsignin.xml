<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginbackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="45dp"
            android:fontFamily="@font/lato_light"
            android:gravity="center"
            android:id="@+id/signuptext"
            android:layout_marginTop="30dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name"
            android:inputType="text"
            android:background="@drawable/signuproundall"
            android:layout_below="@id/signuptext"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:textColor="#404040"
            android:fontFamily="@font/lato_light"
            android:id="@+id/nameloginfield"
            android:layout_marginHorizontal="30dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="E-mail"
            android:background="@drawable/signuproundall"
            android:layout_below="@id/nameloginfield"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/lato_light"
            android:layout_marginTop="50dp"
            android:textColor="#404040"
            android:id="@+id/emailfield"
            android:layout_marginHorizontal="30dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:background="@drawable/signuproundall"
            android:layout_below="@id/emailfield"
            android:gravity="center"
            android:fontFamily="@font/lato_light"
            android:layout_marginTop="50dp"
            android:textColor="#404040"
            android:inputType="textPassword"
            android:id="@+id/passwordfield"
            android:layout_marginHorizontal="30dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Phone no."
            android:fontFamily="@font/lato_light"
            android:background="@drawable/signuproundall"
            android:layout_below="@id/passwordfield"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:textColor="#404040"
            android:inputType="phone"
            android:id="@+id/phonenofield"
            android:layout_marginHorizontal="30dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phonenofield"
            android:text="Sign Up"
            android:fontFamily="@font/lato"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="70dp"
            android:id="@+id/signinbutton"
            android:onClick="clickSignIn"
            android:background="@drawable/layoutloginbutton"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:layout_below="@id/signinbutton"
            android:gravity="center"
            android:id="@+id/haveaccount"
            android:layout_marginBottom="70dp"
            android:layout_marginTop="30dp"
            android:onClick="clickHaveAccount"
            android:fontFamily="@font/lato"/>


    </RelativeLayout>

</ScrollView>